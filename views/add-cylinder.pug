extends structure

block append stylesheets
    link(rel="stylesheet" href="css/ui.css")
    link(rel="stylesheet" href="css/customer.css")

block append scripts
    script(src="js/add-cylinder.js")

block append top-content
    p.page-title
        span.fa.fa-fw.fa-plus-circle
        |  Add Cylinder

block append body-content
    #alertBoxContainer
        .row
            .col-xs-12
                p The cylinder has been Added.
            .col-xs-6.col-xs-offset-3

                .col-md-6
                    button#alertBoxBtn.form-control.btn-info(type='button', onclick="location.href='/gas-cylinder-overview'")
                        span OK
                    .col-md-3

            .col-md-2


    div(id="addCylinderForm")
        form#cylinderForm()
            .row
                .col-md-2
                    label Cylinder Reference
                .col-md-3
                    input(type='text', name='reference')
            br
            .row
                .col-md-2
                    label Size
                .col-md-3
                    select.selectpicker(name="size")
                        optgroup()
                            option Large
                            option Medium
                            option Small
            br
            .row
                .col-md-2
                    label Condition
                .col-md-3
                    select.selectpicker(name="condition")
                        optgroup()
                            option Full
                            option Half
                            option Empty
            br
            .row
                .col-md-2
                    label Location
                .col-md-3
                    input(type='text', name='location')
            p
                | All fields are obligatory.
            br
            .row
                .col-md-3
                    button.form-control.btn-info(type='button' id="btnAddCylinder")
                        span.fa.fa-fw.fa-check
                        |  Add Cylinder
                .col-md-2
                    button.form-control.btn-info(type='button', id="btnCancelCylinder")
                        span.fa.fa-fw.fa-times
                        |  Cancel

block append scripts
    script(src="js/add-cylinder.js")

