extends structure

block append stylesheets
    link(rel="stylesheet" href="css/ui.css")
    link(rel="stylesheet" href="css/customer.css")

block append body-content
    h2
    div(id='alertBoxContainer')
        .row
            .col-md-2
            .col-md-8
                div.form-control.alertBox
                    br
                    | The customer has been deleted
                    br
                    .col-md-2
                    .col-md-8
                        button.form-control.btn-info(type='button', id="alertBoxBtn",onclick="location.href='/customer-overview'")
                            span OK
                    .col-md-2

            .col-md-2

    h2
        span.glyphicon.glyphicon-remove-circle
        |  Delete customer
    p
        | Do you really want to delete this customer?
    br
    div(id="deleteCustomerSection")
        form(action='')
            .container-fluid
                .row
                    .customer-overview
        .row
            .col-md-2
            .col-md-8
            p
                |
            br
            .row
                .col-md-3
                    button.form-control.btn-info(type='button' id="btnDeleteCustomer")
                        span.fa.fa-fw.fa-trash-alt
                        |  Delete Customer
                .col-md-2
                    button.form-control.btn-info(type='button', onclick="location.href='/customer-overview'")
                        span.fa.fa-fw.fa-times
                        |  Cancel

        div(class="error")

block append scripts
    script(src="js/customer-overview.js")
