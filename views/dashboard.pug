extends structure

block append stylesheets
    link(rel="stylesheet" href="css/dashboard.css")

block append top-content
    p.page-title
        span.glyphicon.glyphicon-home
        |  Dashboard
block append body-content
    p All currently booked pitches and their assigned customers at a glance
    p !{data}

        form
            .row
                .col-md-3
                    .inner-addon.left-addon
                        i.glyphicon.glyphicon-calendar
                        input.form-control.input(type='text', name='date', placeholder='DD/MM/YYYY')
                .col-md-3
                    button.form-control.btn-info(type='button', id="Show")
                        |   Show overview for one day
                .col-md-3
                    .inner-addon.left-addon
                        i.glyphicon.glyphicon-search
                        input.form-control.input(type='text', placeholder='Search Pitch by ID', id='pitchSearch')
                .col-md-3
                    .countDogs
        br
        #loading
        .pitchOverview#pitchTable



block append scripts
    script(src="js/dashboard.js")






