extends structure

block append stylesheets
    link(rel="stylesheet" href="css/manage-booking.css")
    link(rel="stylesheet" href="css/ui.css")

block append top-content
    p.page-title
        span.glyphicon.glyphicon-list-alt
        |  Booking Confirmation

block append body-content
    // show-booking.js inserts confirmation by ID booking
    // Main Page Content:
    form(action='')
        .container-fluid
            .row
                #loading
                .booking-confirmation#booking

    .col-md-8
        button.form-control.btn-info(type='button', id='printPDF', name='printPDF')
            span.glyphicon.glyphicon-list-alt
            |  Send Booking confirmation

block append scripts
    script(src="js/show-booking.js")
    script(src="js/email-confirmation.js")




