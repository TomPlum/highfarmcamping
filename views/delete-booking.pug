extends structure

block append stylesheets
    link(rel="stylesheet" href="css/booking.css")
    link(rel="stylesheet" href="css/manage-booking.css")
    link(rel="stylesheet" href="css/ui.css")

block append top-content
    p.page-title
        span.glyphicon.glyphicon-remove-circle
        |  Delete Booking

block append body-content
    #alertBoxContainer
        .row
            .col-md-8
                .form-control.alertBox
                    br
                    | The booking has been deleted
                    br
                    .col-md-8
                        button.form-control.btn-info(type='button', id="alertBoxBtn", onclick="location.href='/manage-booking/overview'")
                            span OK
    #alertBoxContainer2
        .row
            .col-md-8
                .form-control.alertBox
                    br
                    | The booking could not be deleted because of still existing customers related to the booking
                    br
                    .col-md-8
                        button.form-control.btn-info(type='button', id="alertBoxBtn2", onclick="location.href='/manage-booking'")
                            span OK

    .container-fluid#deleteBookingSection
        .row
            .col
            p Do you really want to delete this booking?
            .booking-to-be-deleted
        .row
            .col-md-2.col-sm-4
                button.form-control.btn-info(type='button' id="btnDeleteBooking")
                    span.fa.fa-fw.fa-trash-alt
                    |  Delete Booking
            .col-md-2.col-sm-4
                button.form-control.btn-info(type='button', onclick="location.href='/manage-booking/overview'")
                    span.fa.fa-fw.fa-times
                    |  Cancel

        .error

block append scripts
    script(src="js/delete-booking.js")
