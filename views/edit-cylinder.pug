                    output(type='text',name="size")

                .row

                .col-md-2
                    label New Reference
                .col-md-3
                    input(type='text',name="reference")
                .col-md-2
                    label Choose new size :
                .col-md-3
                    select.selectpicker(name="size")
                        optgroup()
                            option Large
                            option Medium
