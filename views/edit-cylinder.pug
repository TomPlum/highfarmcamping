            br
            .row
                .col-md-2
                    label Condition
                .col-md-3
                    output(type='text',name="condition")
                .col-md-2
                    label Location
                .col-md-3
                    output(type='text',name="location")

                .row

                .col-md-2
                    label New Condition
                .col-md-3
                    select.selectpicker(name="condition")
                        optgroup()
                            option Full
                            option Half
                            option Empty
                .col-md-2
                    label New Location :
                .col-md-3
                    input(type='text',name="location")

