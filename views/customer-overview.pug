extends structure

block append stylesheets
    link(rel="stylesheet" href="css/customer.css")
    link(rel="stylesheet" href="css/ui.css")

block append body-content
    h2
        span.glyphicon.glyphicon-user
        |  Customer Overview

        p
            .row
                .col-md-2
                    button.form-control.btn-info(type='button', onclick="location.href='/addcustomer'")
                        span.glyphicon.glyphicon-add
                        span Add Customer

                            //the jquery button for edit doesnt work yet
                .col-md-2
                    button.form-control.btn-info(type='button', id="Edit", onclick="location.href='/editcustomer'")
                        span.glyphicon.glyphicon-add
                        span Edit Customer

    // Main Page Content
    form(action='')
        .container-fluid
            .row
                .customer-overview

block append scripts
    script(src="js/customer-overview.js")




